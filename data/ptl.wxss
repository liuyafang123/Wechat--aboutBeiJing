
.post-container{
  display:flex;
  flex-direction: column;
  margin:20rpx 0 20rpx;
  border-bottom: 1px solid#a8a3a3;
  border-top:1px solid#a8a3a3;
  padding-bottom: 5px;
  background-color:lightgrey;
}
.post-athor-data{
  margin:10rpx 0 20rpx 10rpx;
  display:flex;
  flex-direction: row;
  align-items:center;
}
.post-athors-img{
  width:35rpx;
  height:35rpx;
  flex-direction: row;
  float:right;
  margin-left: 0 10px;
}
.post-athor--img{
  width: 100%;
  height:400rpx
}
.post-athor-img{
  width: 200rpx;
  height:150rpx;
  border-radius: 50%; 
}
.post-img{
  width:100%;
  height:400rpx;
}
.post-text{
  font-family: Microsoft YaHei;
  color:#666;
  font-size:26rpx;
  margin-bottom:20rpx;
  margin-left: 20rpx;
  letter-spacing:2rpx;
  line-height: 40rpx;
}
.post-container-text{
  width:20px;
  margin-left:10px;
  font-size: 15px;
  font-weight: 600;
  line-height: 24px;
}
.post-athor-text{
  margin-left:10px;
  font-size: 25rpx;
  font-family: Microsoft YaHei;
  color:#666;
}
.post-athors-text{
  text-align: center;
  font-size: 20px;
  font-weight: 300;
  line-height: 20px;
  font-family: Microsoft YaHei;
}
.post-icon-text{
  font-size: 25rpx;
  font-family: Microsoft YaHei;
  color:#666;
  flex-direction: row;
  float:right;
  margin-left: 0 10px;
}