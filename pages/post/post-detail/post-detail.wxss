/* pages/post/post-detail.wxss */
.post-text{
  font-size:16px;
  font-weight: 600;
  color:#666;
  margin-bottom: 10px;
  margin-left: 10px;
}
.head-image {
  width: 750rpx;
  height: 460rpx;
}
.post-data{
  margin-left:40px;
  font-size: 25rpx;
  font-family: Microsoft YaHei;
  color:#666;
}
.content{
  color: #666;
  margin: 100rpx 22rpx 0;
  line-height: 44rpx;
  letter-spacing: 1px;
  font-size:14px;
}
.tool{
  height: 64rpx;
  margin: 20rpx 28rpx 20rpx 0;
  display: flex;
  justify-content: center;
}
.tool-item{
  align-items: center;
  margin-right: 30rpx;
  display: flex;
}
.tool-item:last-child{
  margin-right: 0rpx;
}

.tool-item image{
  height: 30rpx;
  width:30rpx;
  margin-right: 10rpx;
}

.comment image{
  transform: scale(.85);
}
